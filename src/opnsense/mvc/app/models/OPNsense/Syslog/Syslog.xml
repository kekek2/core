<model>
    <mount>//OPNsense/Syslog</mount>
    <version>1.0.0</version>
    <description>
        OPNsense Syslog
    </description>
    <items>
        <Reverse type="BooleanField">
            <default>1</default>
            <Required>Y</Required>
        </Reverse>
        <NumEntries type="IntegerField">
            <default>50</default>
            <Required>Y</Required>
            <MinimumValue>5</MinimumValue>
            <MaximumValue>2000</MaximumValue>
            <ValidationMessage>Number of log entries to show must be between 5 and 2000.</ValidationMessage>
        </NumEntries>
        <DisableLogFiles type="BooleanField">
            <default>0</default>
            <Required>Y</Required>
        </DisableLogFiles>

        <RotationFileSize type="IntegerField">
            <default>1024</default>
            <Required>Y</Required>
            <MinimumValue>5</MinimumValue>
            <ValidationMessage>Log file size must be a positive integer greater than 5.</ValidationMessage>
        </RotationFileSize>

        <RotationCount type="IntegerField">
            <default>5</default>
            <Required>Y</Required>
        </RotationCount>

        <LogWebServer type="BooleanField">
            <default>0</default>
            <Required>Y</Required>
        </LogWebServer>

        <Firewall>
            <LogDefaultBlock type="BooleanField">
                <default>0</default>
                <Required>Y</Required>
            </LogDefaultBlock>
            <LogDefaultPass type="BooleanField">
                <default>0</default>
                <Required>Y</Required>
            </LogDefaultPass>
            <LogBogons type="BooleanField">
                <default>0</default>
                <Required>Y</Required>
            </LogBogons>
            <LogPrivateNets type="BooleanField">
                <default>0</default>
                <Required>Y</Required>
            </LogPrivateNets>
            <FilterDescriptions type="OptionField">
                <default>val_0</default>
                <Required>Y</Required>
                <OptionValues>
                    <val_0>Omit descriptions</val_0>
                    <val_1>Display as column</val_1>
                    <val_2>Display as second row</val_2>
                </OptionValues>
            </FilterDescriptions>
       </Firewall>

        <LocalSockets>
            <Socket type="ArrayField">
                <Path type="TextField">
                    <Required>Y</Required>
                </Path>
            </Socket>
        </LocalSockets>

        <LogCategories>
            <Category type="ArrayField">
                <Name type="TextField">
                    <Required>Y</Required>
                </Name>
                <Description type="TextField">
                    <Required>Y</Required>
                </Description>
                <LogRemote type="BooleanField">
                </LogRemote>
            </Category>
        </LogCategories>

        <Remote>
            <Enable type="BooleanField">
                <default>0</default>
                <Required>Y</Required>
            </Enable>
            <SourceIP type="InterfaceField">
                <Required>N</Required>
                <default></default>
            </SourceIP>
            <Proto type="OptionField">
                <Required>N</Required>
                <default>ipv4</default>
                <OptionValues>
                    <ipv4>IPv4</ipv4>
                    <ipv6>IPv6</ipv6>
                </OptionValues>
            </Proto>
            <BindAddress type="TextField">
            </BindAddress>
            <Servers type="CSVListField">
                <Required>N</Required>
                <mask>/^([a-zA-Z0-9.:,]){0,}/</mask>
                <ValidationMessage>Please enter valid targets (e.g. 192.168.0.100:514).</ValidationMessage>
            </Servers>
            <LogAll type="BooleanField">
            </LogAll>
        </Remote>

        <LogSources>
            <Source type="ArrayField">
                <Program type="TextField">
                    <Required>Y</Required>
                </Program>
            </Source>
        </LogSources>

        <LogTargets>
            <Target type="ArrayField">
                <Source type="TextField">
                    <Required>N</Required>
                </Source>
                <Filter type="TextField">
                    <Required>Y</Required>
                </Filter>
                <ActionType type="TextField">
                    <Required>N</Required>
                </ActionType>
                <Target type="TextField">
                    <Required>Y</Required>
                </Target>
                <Category type="TextField">
                </Category>
                <PID type="TextField">
                </PID>
                <SigNum type="TextField">
                </SigNum>
            </Target>
        </LogTargets>

    </items>
</model>
