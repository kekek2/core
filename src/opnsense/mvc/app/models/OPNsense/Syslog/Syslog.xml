<model>
    <mount>//OPNsense/Syslog</mount>
    <description>
        OPNsense Syslog
    </description>
    <items>
        <Reverse type="BooleanField">
            <default>1</default>
            <Required>Y</Required>
        </Reverse>
        <NumEntries type="IntegerField">
            <Required>N</Required>
        </NumEntries>
        <DisableLogFiles type="BooleanField">
            <default>0</default>
            <Required>Y</Required>
        </DisableLogFiles>

        <CoreSystemSourceName type="TextField">
        </CoreSystemSourceName>
        <AllPrograms type="TextField">
        </AllPrograms>

        <Remote>
            <Enable type="BooleanField">
                <default>0</default>
                <Required>Y</Required>
            </Enable>
            <SourceIP type="InterfaceField">
                <Required>N</Required>
                <default></default>
            </SourceIP>
            <Proto type="OptionField">
                <Required>N</Required>
                <default>ipv4</default>
                <OptionValues>
                    <ipv4>IPv4</ipv4>
                    <ipv6>IPv6</ipv6>
                </OptionValues>
            </Proto>
            <Servers type="CSVListField">
                <Required>N</Required>
                <mask>/^((?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?):(6553[0-5]|655[0-2][0-9]|65[0-4](\d){2}|6[0-4](\d){3}|[1-5](\d){4}|[1-9](\d){0,3})([,]){0,1})*/u</mask>
                <ValidationMessage>Please enter valid targets (e.g. 192.168.0.100:514).</ValidationMessage>
            </Servers>
        </Remote>

        <LogSources>
            <Source type="ArrayField">
                <Program type="TextField">
                    <Required>Y</Required>
                </Program>
                <Description type="TextField">
                </Description>
                <RemoteLog type="BooleanField">
                    <default>0</default>
                    <Required>Y</Required>
                </RemoteLog>
                <Name type="TextField">
                </Name>
                <Target type="TextField">
                    <Required>Y</Required>
                </Target>
            </Source>
        </LogSources>

        <SystemSelectors>
            <Selector type="ArrayField">
                <Filter type="TextField">
                    <Required>Y</Required>
                </Filter>

                <ActionType type="TextField">
                    <Required>N</Required>
                </ActionType>

                <Target type="TextField">
                    <Required>Y</Required>
                </Target>
            </Selector>
        </SystemSelectors>

    </items>
</model>
