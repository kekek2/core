<model>
    <mount>//OPNsense/Syslog</mount>
    <description>
        OPNsense Syslog
    </description>
    <items>
        <Reverse type="BooleanField">
            <default>1</default>
            <Required>Y</Required>
        </Reverse>
        <NumEntries type="IntegerField">
            <Required>N</Required>
        </NumEntries>
        <DisableLogFiles type="BooleanField">
            <default>0</default>
            <Required>Y</Required>
        </DisableLogFiles>

        <Remote>
            <Enable type="BooleanField">
                <default>0</default>
                <Required>Y</Required>
            </Enable>
            <SourceIP type="InterfaceField">
                <Required>N</Required>
                <default></default>
            </SourceIP>
            <Proto type="OptionField">
                <Required>N</Required>
                <default>ipv4</default>
                <OptionValues>
                    <ipv4>IPv4</ipv4>
                    <ipv6>IPv6</ipv6>
                </OptionValues>
            </Proto>
            <Servers type="CSVListField">
                <Required>N</Required>
                <mask>/^((?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?):(6553[0-5]|655[0-2][0-9]|65[0-4](\d){2}|6[0-4](\d){3}|[1-5](\d){4}|[1-9](\d){0,3})([,]){0,1})*/u</mask>
                <ValidationMessage>Please enter valid targets (e.g. 192.168.0.100:514).</ValidationMessage>
            </Servers>
        </Remote>

        <LogSources>
            <Source type="ArrayField">
                <Predefined type="BooleanField">
                    <default>0</default>
                    <Required>Y</Required>
                </Predefined>
                <Program type="CSVListField">
                    <Required>Y</Required>
                </Program>
            </Source>
        </LogSources>

        <Selectors>
            <Selector type="ArrayField">
                <Predefined type="BooleanField">
                    <default>0</default>
                    <Required>Y</Required>
                </Predefined>
                <Enable type="BooleanField">
                    <default>1</default>
                    <Required>Y</Required>
                </Enable>
                <Name type="TextField">
                    <Required>Y</Required>
                </Name>
                <LogSource type="ModelRelationField">
                    <Model>
                        <Sources>
                            <source>OPNsense.Syslog.Syslog</source>
                            <items>LogSources.Source</items>
                            <display>Program</display>
                        </Sources>
                    </Model>
                    <Required>N</Required>
                </LogSource>
                <InvertSource type="BooleanField">
                    <default>0</default>
                </InvertSource>
                <Filters>
                    <Filter type="ArrayField">
                        <Facility type="OptionsField">
                            <Required>N</Required>
                            <OptionValues>
                                <auth>auth</auth>
                                <authpriv>authpriv</authpriv>
                                <daemon>daemon</daemon>
                                <kern>kern</kern>
                                <lpr>lpr</lpr>
                                <mail>mail</mail>
                                <news>news</news>
                                <security>security</security>
                                <user>user</user>
                                <local0>local0</local0>
                                <local1>local1</local1>
                                <local2>local2</local2>
                                <local3>local3</local3>
                                <local4>local4</local4>
                                <local5>local5</local5>
                                <local6>local6</local6>
                                <local7>local7</local7>
                            </OptionValues>
                        </Facility>
                        <Level type="OptionField">
                            <Required>N</Required>
                            <OptionValues>
                                <emerg>Emergency</emerg>
                                <crit>Critical</crit>
                                <alert>Alert</alert>
                                <err>Error</err>
                                <warning>Warning</warning>
                                <notice>Notice</notice>
                                <info>Info</info>
                                <debug>Debug</debug>
                            </OptionValues>
                        </Level>
                        <LevelOperator type="OptionField">
                            <Required>N</Required>
                            <default></default>
                            <OptionValues>
                                <e>=</e>
                                <ne>!=</ne>
                                <ge>&gt;=</ge>
                                <le>&lt;=</le>
                            </OptionValues>
                        </LevelOperator>
                    </Filter>
                </Filters>
                <LocalSocket type="TextField">
                    <Required>N</Required>
                </LocalSocket>
                <PipeAction type="TextField">
                    <Required>N</Required>
                </PipeAction>
                <RemoteAction type="BooleanField">
                    <default>0</default>
                </RemoteAction>
            </Selector>
        </Selectors>

    </items>
</model>
